<h2>Cart show</h2>
<ul>
  <% @cart.lines.each do |line| %>
    <li>Item: <%= line.product.name %>/ Price: <%= number_to_currency(line.product.price) %>/ Quantity: <%= line.quantity %>/ Total Price: <%= number_to_currency(line.total_price) %>
    <ul>
      <li>
        <%= link_to "Add one", line_item_add_path(:id => line), method: :post %>
        <%= link_to "Reduce one", line_item_reduce_path(:id => line), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", line_item_path(line), method: :delete %>
      </li>
    </ul>
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>
<%= link_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>
