<div class="banner d-flex justify-content-center align-items-center mt-3 mx-auto">
   <%= image_tag "market-logo.png", class: "banner-img" %>
    <h1 class="mb-0"><strong>My groceries</strong></h1>
</div>

<div class="container mt-3" style="position: relative; left:30px;">
  <%= form_tag products_path, class: "inline-form", method: :get do %>
  <div class="search-bar">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a product"
      %>
  </div>
  <div>
    <%= submit_tag "Search", class: "btn btn-light form-button"%>
  </div>
    <% end %>
</div>

<div class="container">
  <h2 class="mt-3"><%= pluralize @products.count, 'product' %> of <%= "#{@count.count}" %></h2>
  <div class="cards mt-5">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="card-trip x" style="border-radius: 20px">
          <div class="card-trip-infos">
              <%= image_tag product.image_url, class: "card-img" %>
            <div class="div-info d-flex flex-column mx-auto background-purple w-100">
              <h3 class="card-trip-pricing background-purple mt-2"><%= humanized_money_with_symbol(product.price) %></h3>
              <div class="description">
                <h6 class="card-text background-purple">
                <% if product.name.length < 25 %>
                  <%= product.name %>
                <% else %>
                  <%= product.name[0..24]... %>
                <% end %>
                </h6>
              </div>
                <img src=<%= product.market_image_url %> class="card-trip-user avatar-bordered mt-1" />
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="mt-5 d-flex justify-content-center align-items-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
