<div class="container">
  <div class="row py-4">
    <div class="d-flex justify-content-center align-items-center">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
        <% @order.cart.lines.each_with_index do |line, i| %>
          <% if i == 0 %>
            <div class="carousel-item active" style="height:45vh; width:25vw;">
              <img src="<%= line.product.image_url %>" class="d-block" alt="..." style="border-radius:15px; height:45vh; width:25vw;">
            </div>
          <% else %>
            <div class="carousel-item" style="height:45vh; width:25vw;">
              <img src="<%= line.product.image_url %>" class="d-block" alt="..." style="border-radius:15px; height:45vh; width:25vw;">
            </div>
          <% end %>
        <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-3">
        <div class="checkout ms-3 d-flex flex-column justify-content-center align-items-center">
          <h1 class="text-center">Checkout summary</h1>
          <h2 style="color:#4C3575;">Items purchased:</h2>
          <div class="container">
            <ul>
              <% @order.cart.lines.each do |line|%>
                <li><strong><%= line.quantity %>X <%= line.product.name %></strong> for <strong><%= humanized_money_with_symbol line.total_price %></strong></li>
              <% end %>
            </ol>
            <div class="d-flex justify-content-center align-items-center" style="width 100%;">
              <button id="pay" class="pay mt-3" ><strong>Pay</strong></button>
            </div>
            <script src="https://js.stripe.com/v3/"></script>
            <script>
              const paymentButton = document.getElementById('pay');
              paymentButton.addEventListener('click', () => {
                const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
                stripe.redirectToCheckout({
                  sessionId: '<%= @order.checkout_session_id %>'
                });
                "<% Cart.create %>"
              });
            </script>
          </div>
        </div>
    </div>
  </div>
</div>
